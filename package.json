{
  "name": "blokus",
  "version": "0.0.1",
  "description": "este's personal project :: implement a board game(blokus) using WS",
  "type": "module",
  "watch": {
    "start": "**.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "prebuild": "node .scripts/clean-dist.js",
    "build": "tsc && node .scripts/copy-public.js",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "start": "tsc && node dist/app.js",
    "build:live": "nodemon --watch '*.ts' --exec \"ts-node\" consoletest.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vientoeste/blokus.git"
  },
  "keywords": [
    "node.js",
    "ws",
    "blokus",
    "board",
    "game",
    "express.js",
    "blokus"
  ],
  "author": "este",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vientoeste/blokus/issues"
  },
  "homepage": "https://github.com/vientoeste/blokus#readme",
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongodb": "^5.1.0",
    "morgan": "^1.10.0",
    "nunjucks": "^3.2.3",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.33",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.6",
    "@types/nunjucks": "^3.2.2",
    "@types/passport": "^1.0.12",
    "@types/passport-local": "^1.0.35",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "lint-staged": "^13.1.2",
    "typescript": "^4.9.5"
  }
}
